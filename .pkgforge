name 'lvm2'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': '4.9-rc6-1',
  'util-linux': '2.29-2'
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

patch 'makefile_cflags.patch'
patch 'lvm2-avoid-mallinfo.patch'
patch 'lvm2-fix-stdio-usage.patch'

build do
  configure
  make
  install
end

test do
  # TODO: add tests
end
