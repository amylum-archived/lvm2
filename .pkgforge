name 'lvm2'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.16-1',
    checksum: '55af258de8663de5ec97db875651eaeecc209b47454dbbf27757d4de595e618d'
  },
  'util-linux': {
    version: '2.32-18',
    checksum: 'ed39bca0db399b3fef3f0cbcd5cdfd24866ee6b34e0d29c0ef7b0ed56e8175a0'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

patch 'makefile_cflags.patch'
patch 'lvm2-avoid-mallinfo.patch'
patch 'lvm2-fix-stdio-usage.patch'
patch 'lvm2-always-static.patch'

build do
  configure 'BLKID_LIBS' => '-luuid -lblkid'
  make
  install
end

test do
  #run 'pvscan --ignorelockingfailure'
  run 'dmsetup help'
end
