name 'lvm2'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.20-1',
    checksum: 'aed037b2b3fb2df77ca19359a20188d39c25d011febf4d3733d251fa87ca9636'
  },
  'util-linux': {
    version: '2.33-4',
    checksum: '3c886a8dcc6e7fa63e477cbb789c9f11ee4368e7cb52efebf1b17880f6aa28ed'
  },
  libaio: {
    version: '0.3.111-4',
    checksum: '8f4f93f2dea0dd58abd3a6a4b213c097522fba9fd3d1a61add5075bbc8e664cc'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

patch 'makefile_cflags.patch'
patch 'lvm2-avoid-mallinfo.patch'
patch 'lvm2-fix-stdio-usage.patch'
patch 'lvm2-always-static.patch'

build do
  configure 'BLKID_LIBS' => '-luuid -lblkid'
  make
  install
end

test do
  #run 'pvscan --ignorelockingfailure'
  run 'dmsetup help'
end
