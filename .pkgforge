name 'lvm2'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  },
  'util-linux': {
    version: '2.31-16',
    checksum: 'f67099ac777eb9b8d4f8d9de7e818adc9082d907488850cde972eaede4096e0e'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

patch 'makefile_cflags.patch'
patch 'lvm2-avoid-mallinfo.patch'
patch 'lvm2-fix-stdio-usage.patch'
patch 'lvm2-always-static.patch'

build do
  configure 'BLKID_LIBS' => '-luuid -lblkid'
  make
  install
end

test do
  #run 'pvscan --ignorelockingfailure'
  run 'dmsetup help'
end
