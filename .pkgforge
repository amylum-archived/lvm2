name 'lvm2'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': '4.11-4',
  'util-linux': '2.30-3'
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

patch 'makefile_cflags.patch'
patch 'lvm2-avoid-mallinfo.patch'
patch 'lvm2-fix-stdio-usage.patch'

build do
  configure 'BLKID_LIBS' => '-luuid -lblkid'
  make
  install
end

test do
  #run 'pvscan --ignorelockingfailure'
  run 'dmsetup help'
end
