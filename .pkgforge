name 'lvm2'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.18-1',
    checksum: 'edc8dab0e57cb3868867a86d501eb5f314ad00d87e50957c3ffae113ce967298'
  },
  'util-linux': {
    version: '2.32.1-10',
    checksum: '912b673cf53f5b7dc7d675a71eab9c9e20706a645c1ec847cc1aaa059ba224f9'
  },
  libaio: {
    version: '0.3.111-2',
    checksum: '76bbef175bcb58a14ed93ed6624b7647d03277c7f37ecd0458fce280436fb2cb'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

patch 'makefile_cflags.patch'
patch 'lvm2-avoid-mallinfo.patch'
patch 'lvm2-fix-stdio-usage.patch'
patch 'lvm2-always-static.patch'

build do
  configure 'BLKID_LIBS' => '-luuid -lblkid'
  make
  install
end

test do
  #run 'pvscan --ignorelockingfailure'
  run 'dmsetup help'
end
