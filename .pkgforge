name 'lvm2'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  },
  'util-linux': {
    version: '2.31-10',
    checksum: '02aa36156345dfc35c76830efc76d42af5c28ec554b5fb0f35f520ce95b2829e'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

patch 'makefile_cflags.patch'
patch 'lvm2-avoid-mallinfo.patch'
patch 'lvm2-fix-stdio-usage.patch'
patch 'lvm2-always-static.patch'

build do
  configure 'BLKID_LIBS' => '-luuid -lblkid'
  make
  install
end

test do
  #run 'pvscan --ignorelockingfailure'
  run 'dmsetup help'
end
